---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import Button from './Button.astro';

const {
  title,
  description,
  tags = [],
  image,
  demoUrl,
  codeUrl
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<article class="card group h-full flex flex-col">
  <div class="relative overflow-hidden h-48">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-4">
      {demoUrl && (
        <Button variant="outline">
          <a 
            href={demoUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            title={t('projects.view_project')}
          >
            {t('projects.view_project')}
          </a>
        </Button>
      )}
      {codeUrl && (
        <Button variant="outline"> 
          <a 
            href={codeUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            title={t('projects.view_code')}
          >
            {t('projects.view_code')}
          </a>
        </Button>
      )}
    </div>
  </div>
  
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">
      {title}
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 mb-4 flex-1">
      {description}
    </p>
    
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-auto pt-2">
        {tags.map((tag: string) => (
          <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary/10 text-primary dark:bg-primary/20 dark:text-primary-light">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</article>
