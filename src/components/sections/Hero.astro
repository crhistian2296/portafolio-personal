---
import { t } from 'i18next';
import Button from '../ui/Button.astro';

const name = 'Tu Nombre'; // Reemplaza con tu nombre
---

<section class="min-h-screen flex items-center justify-center text-center px-4 py-20">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <span class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-primary/10 text-primary dark:bg-primary/20 dark:text-primary-light mb-4">
        {t('hero.subtitle')}
      </span>
    </div>
    
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
      {t('hero.title', { name })}
    </h1>
    
    <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
      {t('hero.description')}
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button href="#projects" variant="primary">
        {t('hero.cta')}
      </Button>
      <Button href="#contact" variant="outline">
        {t('contact.title')}
      </Button>
    </div>
    
    <div class="mt-16 flex justify-center">
      <a 
        href="#about" 
        class="text-gray-400 hover:text-primary dark:hover:text-primary-light transition-colors"
        aria-label="Scroll down"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="24" 
          height="24" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
          class="animate-bounce"
        >
          <path d="M12 5v14m0 0l7-7m-7 7l-7-7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
