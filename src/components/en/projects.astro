---
// src/pages/en/projects.astro
import { useTranslations } from '../../i18n/utils';
import { Code, ExternalLink, Rocket, Wrench } from 'lucide-react';

const lang = 'en';
const t = useTranslations(lang);

const projects = [
  {
    title: t('projects.meteoapp.title'),
    description: t('projects.meteoapp.description'),
    repoUrl: t('projects.meteoapp.repoUrl'),
    liveUrl: t('projects.meteoapp.liveUrl'),
    technologies: ["React", "TypeScript", "Redux Toolkit", "REST API", "CSS3"]
  },
  {
    title: t('projects.journalapp.title'),
    description: t('projects.journalapp.description'),
    repoUrl: t('projects.journalapp.repoUrl'),
    liveUrl: t('projects.journalapp.liveUrl'),
    technologies: ["React", "TypeScript", "Firebase", "Cloudinary", "Redux Toolkit"]
  }
];
---

<section class="py-10 md:py-16" id="projects">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold">{t('nav.projects')}</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
      {projects.map((project, index) => (
        <div class={`bg-gray-50 dark:bg-gray-800 p-6 md:p-8 rounded-lg shadow-xl hover:shadow-2xl transition-shadow duration-300 ease-in-out border-l-4 ${index % 2 === 0 ? 'border-sky-500' : 'border-teal-500'}`}>
          <h2 class="text-2xl font-semibold text-sky-700 dark:text-sky-400 mb-3 flex items-center">
            <span class="mr-2 text-green-500"><Rocket size={24} /></span>
            {project.title}
          </h2>
          
          <p class="text-gray-700 dark:text-gray-300 mb-5 text-justify leading-relaxed text-sm">{project.description}</p>

          {project.technologies && project.technologies.length > 0 && (
            <div class="mb-6">
              <h4 class="font-semibold text-md text-gray-700 dark:text-gray-300 mb-2 flex items-center">
                <span class="mr-2 text-green-500"><Wrench size={18} /></span> 
                {t('projects.technologiesUsed')}:
              </h4>
              <div class="flex flex-wrap gap-2">
                {project.technologies.map(tech => (
                  <span class="bg-sky-100 text-sky-700 dark:bg-sky-900 dark:text-sky-300 px-3 py-1 text-xs font-medium rounded-full">{tech}</span>
                ))}
              </div>
            </div>
          )}

          <div class="flex flex-wrap gap-4 mt-auto pt-4 border-t border-gray-200 dark:border-gray-700">
            {project.repoUrl && (
              <a 
                href={project.repoUrl} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-700 dark:bg-gray-600 rounded-md hover:bg-gray-800 dark:hover:bg-gray-500 transition-colors duration-200 ease-in-out"
              >
                <span class="mr-2 text-green-500"><Code size={16} /></span> {t('projects.repository')}
              </a>
            )}
            {project.liveUrl && (
              <a 
                href={project.liveUrl} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-500 dark:bg-indigo-600 rounded-md hover:bg-indigo-800 dark:hover:bg-indigo-500 transition-colors duration-200 ease-in-out"
              >
                <span class="mr-2 text-green-500"><ExternalLink size={16} /></span> {t('projects.liveDemo')}
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>